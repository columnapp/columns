{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["node_modules", "dist"],
  "display": "Default",
  "compilerOptions": {
    "baseUrl": "./",
    "pretty": true,
    "rootDir": "./",
    "paths": {
      "schema/*": ["./schema/*"]
    },
    "composite": false,
    "stripInternal": true,
    "lib": ["es2020"],
    "disableSizeLimit": true,
    "incremental": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  }
}
